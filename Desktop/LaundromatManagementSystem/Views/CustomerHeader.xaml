<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LaundromatManagementSystem.Views"
             x:Class="LaundromatManagementSystem.Views.CustomerHeader"
             x:Name="CustomerHeaderView">

    <Border StrokeThickness="2"
            BackgroundColor="{DynamicResource HeaderBackgroundColor}"
            Stroke="{DynamicResource HeaderBorderColor}"
            Padding="0">

        <Grid ColumnDefinitions="*, Auto"
              Padding="30, 20">

            <!-- Left Side: Logo and Titles -->
            <VerticalStackLayout Grid.Column="0"
                                 VerticalOptions="Center">
                <Label x:Name="WelcomeLabel"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource HeaderTextColor}"
                       Text="{Binding WelcomeText}"/>
                <Label x:Name="SelectServiceLabel"
                       FontSize="16"
                       TextColor="{DynamicResource HeaderSubtextColor}"
                       Text="{Binding SelectServiceText}"/>
            </VerticalStackLayout>

            <!-- Right Side: Controls -->
            <HorizontalStackLayout Grid.Column="1"
                                   Spacing="15"
                                   VerticalOptions="Center">

                <!-- Language Selector -->
                <Frame BackgroundColor="{DynamicResource ControlBackgroundColor}"
                       BorderColor="{DynamicResource ControlBorderColor}"
                       CornerRadius="10"
                       HeightRequest="60"
                       WidthRequest="160"
                       Padding="15, 0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OnLanguageTappedCommand}"/>
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto, *"
                          ColumnSpacing="10">
                        <!-- Language Icon -->
                        <Label Grid.Column="0"
                               Text="ðŸŒ"
                               FontSize="24"
                               VerticalOptions="Center"/>

                        <!-- Language Text -->
                        <VerticalStackLayout Grid.Column="1"
                                             VerticalOptions="Center">
                            <Label x:Name="LanguageLabel"
                                   Text="{Binding LanguageLabelText}"
                                   FontSize="10"
                                   TextColor="{DynamicResource ControlLabelColor}"/>
                            <Label x:Name="CurrentLanguageLabel"
                                   Text="{Binding Language}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource ControlValueColor}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Theme Selector -->
                <Frame BackgroundColor="{DynamicResource ControlBackgroundColor}"
                       BorderColor="{DynamicResource ControlBorderColor}"
                       CornerRadius="10"
                       HeightRequest="60"
                       WidthRequest="160"
                       Padding="15, 0">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OnLanguageTappedCommand}"/>
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto, *"
                          ColumnSpacing="10">
                        <!-- Theme Icon -->
                        <Label Grid.Column="0"
                               Text="{Binding ThemeIcon}"
                               FontSize="24"
                               VerticalOptions="Center"/>

                        <!-- Theme Text -->
                        <VerticalStackLayout Grid.Column="1"
                                             VerticalOptions="Center">
                            <Label x:Name="ThemeLabel"
                                   Text="{Binding ThemeLabelText}"
                                   FontSize="10"
                                   TextColor="{DynamicResource ControlLabelColor}"/>
                            <Label x:Name="CurrentThemeLabel"
                                   Text="{Binding CurrentThemeText}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource ControlValueColor}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Login Selector -->
                <Frame BackgroundColor="{DynamicResource ControlBackgroundColor}"
                       BorderColor="{DynamicResource ControlBorderColor}"
                       CornerRadius="10"
                       HeightRequest="60"
                       WidthRequest="160"
                       Padding="15, 0">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OnLanguageTappedCommand}"/>
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto, *"
                          ColumnSpacing="10">
                        <!-- Login Icon -->
                        <Label Grid.Column="0"
                               Text="ðŸ”’"
                               FontSize="24"
                               VerticalOptions="Center"/>

                        <!-- Login Text -->
                        <VerticalStackLayout Grid.Column="1"
                                             VerticalOptions="Center">
                            <Label x:Name="LoginLabel"
                                   Text="{Binding LoginLabelText}"
                                   FontSize="10"
                                   TextColor="{DynamicResource ControlLabelColor}"/>
                            <Label x:Name="CurrentLoginLabel"
                                   Text="{Binding CurrentLoginText}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource ControlValueColor}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

            </HorizontalStackLayout>

        </Grid>

    </Border>
</ContentView>
