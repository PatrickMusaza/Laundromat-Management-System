<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaundromatManagementSystem.Views.MainPage"
             Title="Laundromat"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, Auto, *" 
          Padding="0"
          RowSpacing="0">

        <!-- Header Section -->
        <Border BackgroundColor="#4A90E2" 
                HeightRequest="150"
                Padding="0">
            <VerticalStackLayout VerticalOptions="Center" 
                                 HorizontalOptions="Center"
                                 Spacing="10">
                
                <!-- Welcome Text -->
                <Label Text="Welcome to Laundromat"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
                
                <!-- Services Selection Text -->
                <Label Text="Select Your Services"
                       FontSize="18"
                       TextColor="White"
                       HorizontalOptions="Center" />
                
            </VerticalStackLayout>
        </Border>

        <!-- Service Type Buttons -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*, *, *, *"
              Padding="20, 10"
              ColumnSpacing="1"
              BackgroundColor="#E8F4FD">

            <!-- WASH Button -->
            <Border BackgroundColor="White"
                    HeightRequest="80"
                    Stroke="LightGray"
                    StrokeThickness="0.5">
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="5">
                    <Label Text="WASH"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#4A90E2"
                           HorizontalOptions="Center" />
                    <Label Text="Services"
                           FontSize="12"
                           TextColor="#666666"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWashTapped" />
                </Border.GestureRecognizers>
            </Border>

            <!-- DRY Button -->
            <Border Grid.Column="1"
                    BackgroundColor="White"
                    HeightRequest="80"
                    Stroke="LightGray"
                    StrokeThickness="0.5">
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="5">
                    <Label Text="DRY"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#4A90E2"
                           HorizontalOptions="Center" />
                    <Label Text="Services"
                           FontSize="12"
                           TextColor="#666666"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- ADD-ON Button -->
            <Border Grid.Column="2"
                    BackgroundColor="White"
                    HeightRequest="80"
                    Stroke="LightGray"
                    StrokeThickness="0.5">
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="5">
                    <Label Text="ADD-ON"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#4A90E2"
                           HorizontalOptions="Center" />
                    <Label Text="Services"
                           FontSize="12"
                           TextColor="#666666"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- PACKAGE Button -->
            <Border Grid.Column="3"
                    BackgroundColor="White"
                    HeightRequest="80"
                    Stroke="LightGray"
                    StrokeThickness="0.5">
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="5">
                    <Label Text="PACKAGE"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#4A90E2"
                           HorizontalOptions="Center" />
                    <Label Text="Services"
                           FontSize="12"
                           TextColor="#666666"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

        </Grid>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="2"
                    Padding="20">
            <VerticalStackLayout Spacing="25">

                <!-- Language Selection -->
                <HorizontalStackLayout HorizontalOptions="Center" 
                                       Spacing="15">
                    
                    <!-- English Button -->
                    <Border BackgroundColor="#4A90E2"
                            StrokeShape="RoundRectangle 20"
                            Padding="30, 10">
                        <Label Text="English"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Kinyarwanda Button -->
                    <Border BackgroundColor="#F0F0F0"
                            StrokeShape="RoundRectangle 20"
                            Padding="30, 10">
                        <Label Text="Kinyarwanda"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>

                    <!-- Français Button -->
                    <Border BackgroundColor="#F0F0F0"
                            StrokeShape="RoundRectangle 20"
                            Padding="30, 10">
                        <Label Text="Français"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>

                </HorizontalStackLayout>

                <!-- Service Cards Grid -->
                <Grid ColumnDefinitions="*, *" 
                      ColumnSpacing="20"
                      RowDefinitions="Auto, Auto"
                      RowSpacing="20">

                    <!-- Hot Water Card -->
                    <Border Grid.Row="0" Grid.Column="0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            Padding="20"
                            Stroke="LightGray"
                            StrokeThickness="1"
                            HeightRequest="200">
                        <VerticalStackLayout Spacing="15">
                            
                            <!-- Service Title -->
                            <Label Text="Hot Water"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   HorizontalOptions="Start" />
                            
                            <!-- Price -->
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="5,000"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#4A90E2" />
                                <Label Text="RWF"
                                       FontSize="14"
                                       TextColor="#666666"
                                       VerticalOptions="Center"
                                       Margin="0,5,0,0" />
                            </HorizontalStackLayout>
                            
                            <!-- Spacer -->
                            <BoxView HeightRequest="1" 
                                     BackgroundColor="#EEEEEE" 
                                     HorizontalOptions="Fill" />
                            
                            <!-- Add Button -->
                            <Border BackgroundColor="#4A90E2"
                                    StrokeShape="RoundRectangle 5"
                                    Padding="0, 12"
                                    HorizontalOptions="Fill">
                                <Label Text="Tap to add"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnHotWaterTapped" />
                                </Border.GestureRecognizers>
                            </Border>
                            
                        </VerticalStackLayout>
                    </Border>

                    <!-- Cold Water Card -->
                    <Border Grid.Row="0" Grid.Column="1"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            Padding="20"
                            Stroke="LightGray"
                            StrokeThickness="1"
                            HeightRequest="200">
                        <VerticalStackLayout Spacing="15">
                            
                            <!-- Service Title -->
                            <Label Text="Cold Water"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   HorizontalOptions="Start" />
                            
                            <!-- Price -->
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="6,000"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#4A90E2" />
                                <Label Text="RWF"
                                       FontSize="14"
                                       TextColor="#666666"
                                       VerticalOptions="Center"
                                       Margin="0,5,0,0" />
                            </HorizontalStackLayout>
                            
                            <!-- Spacer -->
                            <BoxView HeightRequest="1" 
                                     BackgroundColor="#EEEEEE" 
                                     HorizontalOptions="Fill" />
                            
                            <!-- Add Button -->
                            <Border BackgroundColor="#4A90E2"
                                    StrokeShape="RoundRectangle 5"
                                    Padding="0, 12"
                                    HorizontalOptions="Fill">
                                <Label Text="Tap to add"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            
                        </VerticalStackLayout>
                    </Border>

                    <!-- Express Wash Card (Full Width) -->
                    <Border Grid.Row="1" Grid.Column="0"
                            Grid.ColumnSpan="2"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            Padding="20"
                            Stroke="LightGray"
                            StrokeThickness="1"
                            HeightRequest="200">
                        <VerticalStackLayout Spacing="15">
                            
                            <!-- Service Title -->
                            <Label Text="Express Wash"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   HorizontalOptions="Start" />
                            
                            <!-- Price -->
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="8,000"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#4A90E2" />
                                <Label Text="RWF"
                                       FontSize="14"
                                       TextColor="#666666"
                                       VerticalOptions="Center"
                                       Margin="0,5,0,0" />
                            </HorizontalStackLayout>
                            
                            <!-- Spacer -->
                            <BoxView HeightRequest="1" 
                                     BackgroundColor="#EEEEEE" 
                                     HorizontalOptions="Fill" />
                            
                            <!-- Add Button -->
                            <Border BackgroundColor="#4A90E2"
                                    StrokeShape="RoundRectangle 5"
                                    Padding="0, 12"
                                    WidthRequest="200"
                                    HorizontalOptions="Start">
                                <Label Text="Tap to add"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            
                        </VerticalStackLayout>
                    </Border>

                </Grid>

                <!-- Empty Cart Message -->
                <Border BackgroundColor="#F8F9FA"
                        StrokeShape="RoundRectangle 10"
                        Padding="30"
                        Margin="0, 20">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         Spacing="10">
                        
                        <Label Text="Your cart is empty"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#666666"
                               HorizontalOptions="Center" />
                        
                        <Label Text="Add services to get started"
                               FontSize="14"
                               TextColor="#999999"
                               HorizontalOptions="Center" />
                        
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>